{
    "compilerOptions": {
        "rootDir": "src",
        "declaration": true,
        "declarationDir": "dist/build",
        "module": "esnext",
        "target": "es6",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowUmdGlobalAccess": true,
        "baseUrl": "./src", 
        "paths": {
           "@components/*" : ["./components/*"],
           "@theme/*" : ["./theme/*"],
           "@pages/*" : ["./pages/*"]
         }
    }
}